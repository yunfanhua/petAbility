extends layout.pug

append stylesheets
  link(rel='stylesheet' href='/stylesheets/styleGuide.css')
  script(src='https://kit.fontawesome.com/6b38ac7b93.js', crossorigin='anonymous')

block content
  div.container
    div
      h2 1.Logos

    div
      h2 2.Primary Colors
      p
        a(href="https://colorhunt.co/palette/43937") Reference
      .row.row-cols-3
        .col
          .row.align-items-center
            .col
              div(style="background-color: #e6af2e;").color-sample
            .col
              span.align-middle(style="color: #e6af2e;") yellow-ochre <br/> #e6af2e
        .col
          .row.align-items-center
            .col
              div(style="background-color: #282f44;").color-sample
            .col
              span.align-middle(style="color: #282f44;") dark-navy <br/> #282f44
        .col
          .row.align-items-center
            .col
              div(style="background-color: #ececec;").color-sample
            .col
              span.align-middle(style="color: #acacac;") ivory <br/> #ececec
    div
      h2 3.Secondary Colors
      .row.row-cols-3
        .col
          .row.align-items-center
            .col
              div(style="background-color: #e6af2e;").color-sample
            .col
              span.align-middle(style="color: #e6af2e;") yellow-ochre <br/> #e6af2e
        .col
          .row.align-items-center
            .col
              div(style="background-color: #282f44;").color-sample
            .col
              span.align-middle(style="color: #282f44;") dark-navy <br/> #282f44
        .col
          .row.align-items-center
            .col
              div(style="background-color: #ececec;").color-sample
            .col
              span.align-middle(style="color: #acacac;") ivory <br/> #ececec
    div
      h2 4. Typography
      .container
        h3 Heading 2
    br
    div
      h2 5. Forms
      form
        div.form-group
          label Text Input
          input(type="text" class="form-control" placeholder="Text Input")
        div.form-group
          label Select Form
          select.form-control#exampleFormControlSelect1
            option 1
            option 2
            option 3
    br
    div
      h2 6. Buttons
      button(type='submit', class='btn btn-primary', id='primary-button') Primary Action
      br
      button(type='submit', class='btn btn-secondary', id='skip-button') Skip
      br
      div.progress-buttons
        button(type='submit', class='btn btn-secondary', id='back-button') Back
        button(type='submit', class='btn btn-primary', id='next-button') Next
      br
      div.menu-button#menu-button
        i.fas.fa-chevron-left#menu-back-button
      br
      ul.nav.nav-tabs.nav-justified#myTab(role="tablist")
        li.nav-item
          a.nav-link.active#tab1(data-toggle="tab", role="tab") Cat
        li.nav-item
          a.nav-link#tab2(data-toggle="tab", role="tab") Dog
      br
    div
      h2 7. Navigaton



