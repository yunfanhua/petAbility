
extends ../app.pug

append stylesheets
    link(rel='stylesheet' href='/stylesheets/shareResult.css')

block app-content
    div.success.d-flex.justify-content-center
        img.map-image(src="img/paw-map.png")
        div.share-result 
            h2 #[strong Share results with nearby shelters?]
            p This will help you establish a relationship with nearby shelters
        
        div.fixed-bottom.mb-4
            div.d-flex.justify-content-center.p-3
                button(type='submit', class='btn btn-secondary', id='back-button', onclick="location.href='/report'").mx-2 Cancel
                button(type='submit', class='btn btn-primary', id='next-button', onclick="location.href='/share/location'").mx-2 Ok
