extends layout

append stylesheets
    script(src='js/login.js')

block content
    .container
        .row(style="padding-top: 100px")
            img.user-image(src="img/logo.png", alt="CMU", width="250px", height="160px").mx-auto
        .row
            form.mx-auto#login-form(action='/home')
                div.form-group
                    label Email
                    input(type="text" class="form-control" placeholder="example@email.com" required)
                div.form-group
                    label Password
                    input(type="text" class="form-control" placeholder="********" required)
                    br
                    button.btn.btn-primary.btn-block#login-button(type="submit") Log In
                .label.mx-auto
                  span#account-message Don't have an account? &nbsp
                  span.badge.badge-secondary #[a#sign-up-link Sign up]