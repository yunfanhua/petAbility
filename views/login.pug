extends layout

append stylesheets
    script(src='js/login.js')

block content
    .container
        div.row(style="padding-top: 100px")
            img.user-image(src="img/logo.png", alt="CMU", width="250px", height="160px").mx-auto
        div.row
            form.mx-auto
                div.form-group
                    label Email
                    input(type="text" class="form-control" placeholder="example@email.com")
                div.form-group
                    label Password
                    input(type="text" class="form-control" placeholder="********")
                    br
                    button.btn.btn-primary.btn-block#login-button Log In
                .label.mx-auto 
                  span#account-message Don't have an account? &nbsp
                  span.badge.badge-secondary #[a#sign-up-link Sign up]