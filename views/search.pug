extends app.pug

block app-content
  div.cover-photo
    img.user-image(src="img/searchCover.jpeg", alt="CMU", width="250px", height="160px")
  div.search
    div.search-prompt Ready For A Real Pet?
    form
      div.search-group
        div.label I'M FROM
        input(type="text" class="form-control" placeholder="94043, CA")
        div.label WITHIN
        input(type="text" class="form-control" placeholder="20 miles")
        br
        button(type='submit', class='btn btn-primary', id='primary-button') Search

  include app-footer.pug